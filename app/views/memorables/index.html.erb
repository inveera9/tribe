<%= render 'pages/home' unless user_signed_in? %>

<div id="memorables" class="transitions-enabled">
  <% @memorables.each do |memorable| %>
    <div class="box panel panel-default">
    <span class="name"><strong><%= memorable.title if memorable.title%></strong></span><br/><br/>	
     <%= link_to cl_image_tag(memorable.image.path, :width => 400, :height => 400, :crop => :limit) %>
      <div class="panel-body" padding: 5px>
        <span class="desc-font"><%= memorable.description %></span><br>
        <% if memorable.memory.user == current_user %>
            <div class="actions">
               
                <%= link_to edit_memory_memorable_path(@memory.id,memorable) do %>
                <i class="fa fa-edit"></i>  Edit     
                <% end %>
                
                <%= link_to memory_memorable_path(@memory.id,memorable), method: :delete, data: { confirm: 'Are you sure?' } do %>
                <i class="fa fa-trash"></i>  Delete
                <% end %>
              
              
            </div>
            
          <% end %>
      </div>
      
    </div> 
  <% end %>
</div>
<div class="center">
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
