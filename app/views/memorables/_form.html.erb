<%= form_for [@memory, @memorable], html: { multipart: true } do |f| %>
  <% if @memorable.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@memorable.errors.count, "error") %> prohibited this memorable from being saved:</h2>

      <ul>
      <% @memorable.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class='row'>&nbsp;</div>
  <div class='form-group'>
    <p>Memorabilia consists of photos, videos and documents that are associated with the memory.</p>
    <p>Go ahead and select some to add to your memory.</p>
  </div>

  <div class="form-group">
    <%= f.attachinary_file_field :images,:id=>'memorableImage' %>
  </div>
  <div class='row'>
    <!-- <div class="col-lg-2">Add Memorabilia</div> -->
    
    <div class="col-lg-2"> 
      <%= f.submit 'Done with Memorabilia for now!', :class=> "btn btn-success btn-sm" %>
    </div>
  </div>
<% end %>
